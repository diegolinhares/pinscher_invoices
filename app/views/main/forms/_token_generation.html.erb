<%= turbo_frame_tag "token_generation" do %>
  <%= form_with(url: tokens_generation_path, method: :post, data: { turbo_frame: "remote-modal-body" }) do |form| %>
    <div class="field">
      <%= form.label :email, class: "label" %>
      <div class="control">
        <%= form.email_field :email, placeholder: "Type your email", class: "input" %>
      </div>
    </div>
    <div class="control has-text-centered">
      <%= form.submit "Generate", class: "button is-primary" %>
    </div>
  <% end %>
<% end %>
